# Environment Configuration
ENVIRONMENT=local
DEBUG=false

# Logging Configuration
LOG_LEVEL=INFO
LOG_TO_FILE=true
LOG_FILE_PATH=/logs/helios.log
LOG_JSON_FORMAT=false
LOG_ROTATION_SIZE=100MB
LOG_RETENTION_DAYS=30

# Database Configuration
DATABASE_URL=postgresql+psycopg2://helios:helios@postgres:5432/helios
DATABASE_POOL_SIZE=10
DATABASE_MAX_OVERFLOW=20
DATABASE_ECHO=false

# Redis Configuration
REDIS_URL=redis://redis:6379/0
REDIS_MAX_CONNECTIONS=20
REDIS_SOCKET_KEEPALIVE=true

# Celery Configuration
CELERY_BROKER_URL=redis://redis:6379/1
CELERY_RESULT_BACKEND=redis://redis:6379/2
CELERY_TASK_SERIALIZER=json
CELERY_RESULT_SERIALIZER=json
CELERY_ACCEPT_CONTENT=json
CELERY_TIMEZONE=UTC
CELERY_WORKER_PREFETCH_MULTIPLIER=1
CELERY_TASK_ACKS_LATE=true

# Trading APIs
ALPACA_API_KEY=
ALPACA_SECRET_KEY=
ALPACA_BASE_URL=https://paper-api.alpaca.markets
ALPACA_WS_URL=wss://stream.data.alpaca.markets/v2
ALPACA_DATA_FEED=iex

# Financial Market API
FMP_API_KEY=
FMP_BASE_URL=https://financialmodelingprep.com/api/v3

# Security
ENCRYPTION_KEY=your_32_character_encryption_key_here
JWT_SECRET=your_jwt_secret_key_here
API_SECRET_KEY=your_api_secret_key_for_endpoints

# Trading Configuration
INITIAL_CAPITAL=100000
MAX_PORTFOLIO_RISK=0.10
MAX_DAILY_DRAWDOWN=0.20
DEFAULT_POSITION_SIZE=0.01
MAX_OPEN_POSITIONS=10
MIN_ORDER_VALUE=100
MAX_ORDER_VALUE=10000

# Risk Management
RISK_CHECK_ENABLED=true
RISK_POSITION_LIMIT=0.05
RISK_CORRELATION_LIMIT=0.30
RISK_VAR_CONFIDENCE=0.95
RISK_LOOKBACK_DAYS=252

# Notifications (Slack)
SLACK_WEBHOOK_URL=
SLACK_CHANNEL=helios-alerts
SLACK_USERNAME=Helios-Bot
SLACK_ICON_EMOJI=:robot_face:
SLACK_MENTION_CHANNEL=false
SLACK_MENTION_USERS=

# System Sentinel Configuration
SENTINEL_ENABLED=true
SENTINEL_AUTO_REPAIR=true
SENTINEL_MAX_REPAIR_ATTEMPTS=3
SENTINEL_CHECK_INTERVAL=60
SENTINEL_HEALTH_ENDPOINT=true
SENTINEL_REPAIR_LOG_FILE=/logs/sentinel_repairs.json
SENTINEL_DB_VALIDATION=true
SENTINEL_REDIS_VALIDATION=true
SENTINEL_CELERY_VALIDATION=true

# Health Check Configuration
HEALTH_CHECK_ENABLED=true
HEALTH_CHECK_INTERVAL=30
HEALTH_CHECK_TIMEOUT=10
HEALTH_CHECK_RETRIES=3

# Performance Monitoring
METRICS_ENABLED=true
METRICS_COLLECTION_INTERVAL=300
METRICS_RETENTION_DAYS=90
METRICS_DETAILED_LOGGING=false

# Data Configuration
DATA_STORAGE_PATH=/data
DATA_CACHE_TTL=3600
DATA_BATCH_SIZE=1000
DATA_ASYNC_PROCESSING=true

# Strategy Configuration
STRATEGY_CONFIG_FILE=config/strategy.yaml
STRATEGY_RELOAD_INTERVAL=300
STRATEGY_VALIDATION_STRICT=true

# Development Hints
TA_LIB_LOCAL_INSTALL_HINT=brew install ta-lib   # note for macOS Apple Silicon
DOCKER_COMPOSE_PROFILES=dev,monitoring
KUBERNETES_NAMESPACE=helios

# Container Configuration
CONTAINER_TIMEZONE=UTC
CONTAINER_USER_ID=1000
CONTAINER_GROUP_ID=1000
CONTAINER_MEMORY_LIMIT=2G
CONTAINER_CPU_LIMIT=1000m